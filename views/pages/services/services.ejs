<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../../partials/head') %>
</head>

<body>
    <header>
        <%- include ('../../partials/header') %>
    </header>
    <main>
        <div class="container">
            <br>
            <div class="row mt-4 mb-4">
                <div class="col-lg-3">
                    <h3><%= __('Our Services') %></h3>
                    <ul class="service-list">
                        <li><a tabindex="-1" href="/services/forex"><%= __('Forex Market') %></a></li>
                        <li><a tabindex="-1" href="/services/copy_trade"><%= __('Copy Trade') %></a></li>
                        <li><a tabindex="-1" href="/services/capital_markets"><%= __('Capital Markets') %></a></li>
                        <li><a tabindex="-1" href="/services/technology_advisory"><%= __('Technology & Advisory') %></a>
                        </li>
                        <li><a tabindex="-1" href="/services/AI_trading"><%= __('AI Trading') %></a></li>
                        <li><a tabindex="-1" href="/services/portfolio_management"><%= __('Portfolio Management') %></a>
                        </li>
                        <li><a tabindex="-1" href="/services/blockchain"><%= __('Blockchain') %></a></li>
                        <li><a tabindex="-1" href="/services/finance_training"><%= __('Finance Training') %></a>
                        </li>
                    </ul>

                    <div class="col-sm-12 need-help-box">
                        <h3>Need Help ?</h3>
                        <p>
                            <%= __('Please feel free to contact us. We will get back to you with 1-2 business days.Or just call us now') %>
                        </p>
                        <p><i class="fa fa-phone" style="font-size: 16px ;color: #3c3c3c ;margin-right: 10px ;"></i>
                            +(84)39 723 99 86</p>
                        <p><i class="fa fa-envelope-open-o"
                                style="font-size: 16px ;color: #3c3c3c ;margin-right: 10px ;"></i>info@vgfinex.com</p>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="mt-3 ml-3">
                        <h1 style="color: rgb(43, 43, 119);font-weight: 600;font-size: 70px;">
                            <%= data %></h1>
                        <p style="text-transform: uppercase;">
                            <%= __('GLOBAL STRATEGIES, INSIGHT-DRIVEN TRANSFORMATION') %></p>
                    </div>
                    <!-- Forex Page -->
                    <% if(data === 'Forex') { %>
                    <%- include('./partials/forex') %>
                    <% } %>
                    <!-- Copy trade Page -->
                    <% if(data === 'Copy Trade') { %>
                    <%- include('./partials/copy_trade') %>
                    <% } %>
                    <!-- Technology Advisory Page -->
                    <% if(data === 'Technology Advisory') { %>
                    <%- include('./partials/technology_advisory') %>
                    <% } %>
                    <!-- Finance Training Page -->
                    <% if(data === 'Finance Training') { %>
                    <%- include('./partials/finance_training') %>
                    <% } %>
                </div>
            </div>
        </div>
        </div>
    </main>
    <footer>
        <%- include ('../../partials/footer') %>
    </footer>
</body>

</html>